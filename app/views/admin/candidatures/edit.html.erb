<%= content_for :header_actions do %>
  <%= link_to 'Delete', admin_election_candidature_path(@election, @candidature), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "header-button" %>
<% end %>

<div class="size-medium position-center">

  <h2 class="subhead text-capitalize">
    Edit Candidature for <br/>
    <%= @election.title %>
  </h2>

  <div data-controller="clipboard" class="box box-medium box-center">
    <div class="form-field string optional disabled candidature_candidate_name">
      <label class="string optional disabled form-label" for="candidature_firebase_url">URL</label>
      <input data-target="clipboard.source" value="<%= @candidature.firebase_url %>" class="string optional disabled" type="text" name="candidature[firebase_url]" id="candidature_candidate_name" readonly>
      <button data-action="clipboard#copy" class="clipboard-button">Copy to Clipboard</button>
    </div>
  </div>

  <%= render partial: 'form' %>
</div>
