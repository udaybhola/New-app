<%= content_for :header_actions do %>
  <%= link_to "Add Religion", new_admin_religion_path, class: "header-button" %>
<% end %>

<div class="main">
<h2 class="subhead">Religions</h2>

<table class="box table">
  <thead class="table-header">
    <tr>
      <th>Name</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody class="table-body">
  <% @religions.each do |religion| %>
    <tr>
      <td class="table-row-header">
        <%= religion.name %> <br/>
      </td>
      <td class="table-row-links">
      </td>
      <td class="table-row-actions">
        <%= link_to 'edit', edit_admin_religion_path(religion), class: "button" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>