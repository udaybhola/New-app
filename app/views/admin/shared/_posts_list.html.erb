<div class="box">
  <header class="box-header">
    <h2 class="box-title"><%= title %></h2>
    <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, "/admin/#{type.pluralize}/new?region_type=#{@region_type}&region_id=#{@region_id}", class: 'box-action' if create %>
  </header>
  <div class="box-body box-body-scroll">
    <ul class="box-list">
      <% posts.each do |post| %>
      <li class="box-list-element text-capitalize">
        <%= link_to post.name, "/admin/#{type.pluralize}/#{post.id}/edit" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
