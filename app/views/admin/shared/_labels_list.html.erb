<div class="box">
  <header class="box-header">
    <h2 class="box-title">Labels</h2>
    <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_admin_label_path, class: 'box-action' %>
  </header>

  <div class="box-body box-body-scroll">
    <ul class="box-list">
      <% labels.each do |label| %>
      <li class="box-list-element text-capitalize">
        <a href="<%= url_for edit_admin_label_path(label) %>">
          <span class="label-dot" style="background: <%= label.color %>">&nbsp;</span>
          <%= label.name %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
</div>